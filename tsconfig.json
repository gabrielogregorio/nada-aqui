{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es2021"],
    "allowJs": true,
    "outDir": "./dist",
    "declaration": false,
    "rootDir": "./src",
    "removeComments": true,
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/src/*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.spec.ts"]
}
